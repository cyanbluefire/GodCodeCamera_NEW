<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/model_margin"
    android:layout_marginLeft="@dimen/model_margin"
    android:layout_marginTop="@dimen/model_margin_top"
    android:layout_marginBottom="@dimen/model_margin_top"
    android:background="@color/deep_gray"
    android:gravity="center_vertical"
    android:id="@+id/rl_bottom_toolbar">
    <TextView
        android:id="@+id/tv_model_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_text_order"
        android:textSize="12sp"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/img_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/model_margin"
        android:layout_marginTop="@dimen/model_margin"
        android:layout_below="@id/tv_model_title"
        android:src="@mipmap/qrcode"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/tv_model_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_model"/>
</RelativeLayout>